#!/bin/sh

pid=`ps -ef | grep "crm_count_data.py [NETWORK_ID]" | grep -v grep | /usr/bin/awk '{print $2}'`

cd "[CUR_PATH]"

# echo ${pid}
date >> backend_crm_count_data.log

if [ ! ${pid} ]; then
        # echo "is null"
        echo "No backend process rubbish to clean." >> backend_crm_count_data.log
else
        # echo "not null"
        kill -s 9 ${pid}
        echo "Warning: clean backend process of last round." >> backend_crm_count_data.log
fi
. ../venv/bin/activate
python crm_count_data.py [NETWORK_ID] >> backend_crm_count_data.log
echo 'OK'